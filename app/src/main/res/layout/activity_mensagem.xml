<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.usjt.andresantosfernandesrenedeoliveiramachadointsi3anbua.MensagemActivity">

    <TextView
        android:id="@+id/exibeNomeTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="12dp"
        android:text="@string/exibeNomeTV" />

    <TextView
        android:id="@+id/listaLivros"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/exibeNomeTV"
        android:layout_marginTop="15dp"
        android:text="@string/listaLivros"/>

    <ListView
        android:id="@+id/listViewLivros"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/listaLivros"
        android:layout_marginTop="27dp" />

</RelativeLayout>